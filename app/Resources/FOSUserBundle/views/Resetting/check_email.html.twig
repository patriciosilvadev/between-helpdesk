{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
  <div class="mdl-card mdl-shadow--4dp" style="width: 330px;">
    <div class="mdl-card__title mdl-color--amber-400">
      <h2 class="mdl-card__title-text mdl-color-text--white">
        <img src="{{ asset('assets/images/logo.png') }}" alt="Between" width="48" height="48" style="vertical-align:middle; margin-right: 10px;">
        <span style="line-height: 48px">Between</span>
      </h2>
    </div>

    <div class="mdl-card__supporting-text">
      <br>
      {{ 'resetting.check_email'|trans({'%tokenLifetime%': tokenLifetime})|nl2br }}
      <br>
      <br>
    </div>

    <div class="mdl-card__actions mdl-card--border">
      <a href="{{ path('fos_user_security_login') }}" class="mdl-button mdl-js-button mdl-button--primary mdl-color-text--amber-400" style="float: right;">Fazer login</a>
    </div>
  </div>
{% endblock %}