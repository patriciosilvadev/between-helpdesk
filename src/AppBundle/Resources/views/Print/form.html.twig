{% extends "InfinityCoreBundle:Print:print.html.twig" %}

{% block content %}
    <header>
        <div style="float: left">
            <strong>{{ company.name }}</strong><br>
            {% include 'InfinityCoreBundle::address.html.twig' with {address: company.address[0]} %}
        </div>

        <div class="text-right" style="float: right;">
            <strong>Infinity</strong><br />
            {{ "now"|date('d/m/Y H:i:s') }}
        </div>

        <div style="clear: both"></div>
    </header>

    <div id="content"></div>
{% endblock %}

{% block scripts %}
    <script src="{{ asset('assets/js/infinity/core/print.formscreen.js') }}" type="text/javascript"></script>

    <script type="text/javascript">
        printer.formscreen.getContent();
    </script>
{% endblock %}